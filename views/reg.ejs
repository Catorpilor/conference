<form class="form-horizontal" method="post">
	<fieldset>
		<legend>用户注册</legend>
		<div class="control-group">
			<div class="controls">
                <div class="input-prepend">
                    <span class="add-on"><i class="icon-user"></i></span>
				    <input type="text" class="input-xlarge" id="username" name="username" placeholder="用户名">
                </div>
			</div>
        </div>
        <div class="control-group">
			<div class="controls">
                <div class="input-prepend">
                    <span class="add-on"><i class="icon-envelope"></i></span>
				    <input type="text" class="input-xlarge" id="email" name="email" placeholder="邮箱">
                </div>
			</div>
        </div>
        <div class="control-group">
			<div class="controls">
                <div class="input-prepend">
                    <span class="add-on"><i class="icon-lock"></i></span>
				    <input type="password" class="input-xlarge" id="password" name="password" placeholder="密码">
                </div>
			</div>
        </div>
        <div class="control-group">
			<div class="controls">
                <div class="input-prepend">
                    <span class="add-on"><i class="icon-lock"></i></span>
				    <input type="password" class="input-xlarge" id="password-repeat" name="password-repeat" placeholder="重复密码">
                </div>
			</div>
		</div>
		<div class="form-actions">
			<button type="submit" class="btn btn-primary">注册</button>
		</div>
	</fieldset>
</form>
